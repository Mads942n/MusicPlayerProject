<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <BorderPane fx:id="bp" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <left>
            <VBox prefHeight="600.0" prefWidth="181.0" style="-fx-background-color: #4682b4;" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="78.0" prefWidth="181.0" />
                  <Button fx:id="AllSongs" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="32.0" prefWidth="181.0" style="-fx-background-color: #4682b4 #4682b4;" text="Libary" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="AllSongs1" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="32.0" prefWidth="181.0" style="-fx-background-color: #4682b4 #4682b4;" text="All songs" textFill="WHITE">
                     <font>
                        <Font name="Arial Black" size="12.0" />
                     </font>
                  </Button>
                  <Pane prefHeight="21.0" prefWidth="181.0" />
                  <Button fx:id="MyPlayLists" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="32.0" prefWidth="181.0" style="-fx-background-color: #4682b4 #4682b4;" text="My Playlists" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <ListView fx:id="PlayListList" prefHeight="295.0" prefWidth="181.0" style="-fx-background-color: #4682b4 #4682b4;" />
                  <Button fx:id="NewPlaylist" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="32.0" prefWidth="181.0" style="-fx-background-color: #4682b4 #4682b4;" text="New Playlist" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="DeletePlayList" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="32.0" prefWidth="181.0" style="-fx-background-color: #4682b4 #4682b4;" text="Delete Playlist" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <AnchorPane fx:id="ap" prefHeight="200.0" prefWidth="215.0" style="-fx-background-color: #add8e6;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="pause" layoutX="233.0" layoutY="552.0" mnemonicParsing="false" onAction="#handlePause" prefHeight="46.0" prefWidth="62.0" style="-fx-background-color: #add8e6;">
                     <graphic>
                        <ImageView fitHeight="31.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@media/pause-button-png-transparent-pause-buttonpng-images-pluspng-png-pause-button-512_512.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="play" layoutX="283.0" layoutY="555.0" mnemonicParsing="false" onAction="#handlePlay" prefHeight="39.0" prefWidth="57.0" style="-fx-background-color: #add8e6 #add8e6;">
                     <graphic>
                        <ImageView fitHeight="33.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@media/play.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Pane layoutY="48.0" prefHeight="527.0" prefWidth="616.0">
                     <children>
                        <TableView fx:id="SongsTable" layoutX="2.0" layoutY="4.0" onMouseClicked="#displaySelectedItem" prefHeight="487.0" prefWidth="615.0" style="-fx-background-color: #add8e6;">
                           <columns>
                              <TableColumn fx:id="SongId" prefWidth="75.0" text="SongId" />
                              <TableColumn fx:id="Title" prefWidth="248.0" text="Title" />
                              <TableColumn fx:id="Artist" prefWidth="290.0" text="Artist" />
                           </columns>
                        </TableView>
                     </children>
                  </Pane>
                  <TextField fx:id="Search" layoutX="79.0" layoutY="24.0" prefHeight="25.0" prefWidth="247.0" promptText="Search" />
                  <Button fx:id="autoplayNext" layoutX="344.0" layoutY="571.0" mnemonicParsing="false" onAction="#handleautoplayNext" text="Autoplay Next" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
